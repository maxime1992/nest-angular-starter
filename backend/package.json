{
  "name": "nest-typescript-starter",
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "start": "node index.js",
    "start:watch": "nodemon",
    "prestart:prod": "tsc",
    "start:prod": "node dist/main.js",
    "lint:check": "tslint ./src/**/*",
    "lint:fix": "yarn run lint:check --fix",
    "check": "yarn run lint:check && yarn run prettier:check",
    "check:fix": "yarn run lint:fix; yarn run prettier:fix",
    "prettier:base-files": "yarn run prettier:base './**/*.{js,ts,json}'",
    "prettier:fix": "yarn run prettier:base-files --write",
    "prettier:check": "yarn run prettier:base-files -l",
    "precommit": "lint-staged",
    "prepush": "yarn run lint:check"
  },
  "lint-staged": {
    "linters": {
      "*.{js,ts,json}": [
        "yarn run prettier -l"
      ]
    }
  },
  "dependencies": {
    "@nestjs/common": "4.6.4",
    "@nestjs/core": "4.6.4",
    "@nestjs/microservices": "4.6.4",
    "@nestjs/testing": "4.6.1",
    "@nestjs/websockets": "4.5.8",
    "redis": "2.8.0",
    "reflect-metadata": "0.1.12",
    "rxjs": "5.5.6",
    "typescript": "2.6.2"
  },
  "devDependencies": {
    "@types/node": "9.4.6",
    "husky": "0.14.3",
    "lint-staged": "7.0.0",
    "nodemon": "1.15.1",
    "prettier": "1.10.2",
    "ts-node": "5.0.0",
    "tslint": "5.9.1",
    "tslint-config-prettier": "1.8.0"
  }
}
